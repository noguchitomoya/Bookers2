	<h2>User info</h2>
	     <%= attachment_image_tag user, :profile_image, size: "100x100", format: 'jpeg',
	 	   fallback: "no_image.jpg" %>
	 	   <table class="table">
	 	   	<tbody>
	 	   		<tr></tr>
	 	   		<tr>
	 	   		   <th>name</th>
	               <th><%= user.name %></th>
	            </tr>

	            <tr>
	            	<td>introduction</td>
	            	<td><%= user.introduction %></td>
	            </tr>
	        </tbody>
	       </table>

	       <div class="row">

              <p><%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench
              edit_user" %></p>

   		   </div>

            
            <h2>New book</h2>
      
            <%= form_for(@book) do |f| %>
                <% if @book.errors.any? %>
                    <%= @book.errors.count %>件のエラーが発生しました
                    <% @book.errors.full_messages.each do |message| %>
                        <%= message %>
                    <% end %>
                <% end %> 


                  <div class="field row">
                    <p>Title</p>
                  <%= f.text_field :title,class: "col-xs-12" %>
                  </div>
            
                  <div class="field row">
                    <p>Opinion</p>
                  <%= f.text_area :body,class: "col-xs-12" %>
                  </div>
            
                     <div class="actions row">
            
	                    <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
                     </div>
      
            <% end %>

            