
<%= form_for(@book) do |f| %>
 
    <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>
 
   
    <%= f.text_field :title %>
    <%= f.text_area :body %>
    <%= f.submit %>
<% end %>


<h1>All Books</h1>
   <% @books.each do |book| %>
      <p>タイトル</p>
      <span><%= book.title %></span>
      <p>ボデイ</p>
      <span><%= book.body %></span>

   <% end %>