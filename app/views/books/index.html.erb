

<div class="container"> <!-- ここを追加 -->
    <div class="row">   <!-- ここを追加 -->
        <div class="col-lg-3" style="background-color: orange;"> 
            <%= form_for(@book) do |f| %>
             
                <% if @book.errors.any? %>
                    <%= @book.errors.count %>件のエラーが発生しました
                    <% @book.errors.full_messages.each do |message| %>
                        <%= message %>
                    <% end %>
                <% end %>
             
               
                <%= f.text_field :title %>
                <%= f.text_area :body %>
                <%= f.submit %>
            <% end %>
            
            <p><%= link_to "プロフィール編集", edit_user_path(current_user.id), class: "pull-right" %></p>


            
            
        </div>
        
        <div class="col-lg-9">
            <h1>Books</h1>
            <table class="table">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Opinion</th>
                 
                  <th colspan="3"></th>
                </tr>
              </thead>
            
              <tbody >
                <% @books.each do |book| %>
                  <tr>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>


    </div>
</div>
