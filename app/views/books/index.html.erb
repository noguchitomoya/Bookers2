

<div class="container"> <!-- ここを追加 -->
    <div class="row">   <!-- ここを追加 -->
        <div class="col-lg-3" > 
        <%= render 'books/list', books: @book,user: current_user %>


          
   	
            
        </div>
        
        <div class="col-lg-9">
            <h1>Books</h1>
            <table class="table">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Opinion</th>
                 
                  <th colspan="3"></th>
                </tr>
              </thead>
            
              <tbody >
                <% @books.each do |book| %>
                  <tr>
                    <td><td><%= link_to book.title, book_path(book.id) %></td></td>
                    <td><%= book.body %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>


    </div>
</div>
