<p id="notice"><%=  notice %></p>
<div class="container"> <!-- ここを追加 -->
    <div class="row">   <!-- ここを追加 -->
        <div class="col-xs-3" > 
        <%= render 'books/list', books: @book,user: current_user %>     
        </div>
        
        <div class="col-xs-9">
            <h1>Book detail</h1>
            <table class="table">
              <thead>
                <tr>
                 
                  <th colspan="3"></th>
                </tr>
              </thead>
            
              <tbody >
                 <%if current_user.id == @book.user.id%>
                  <tr>
                    <td><%= link_to user_path(@book.user_id) do %><%= attachment_image_tag @book.user, :profile_image, size: "100x100", fallback: "no_image.jpg"%>
                    <div class="user-name">
								   	<%= @book.user.name %>
								    </div>
                    <% end %></td>
                    <td><%= @book.title %></td>
                    <td><%= @book.body %></td>
                    <td><%= link_to 'Edit', edit_book_path(@book) %></td>
                    <td><%= link_to "Destroy", book_path(@book), method: :delete,data: { confirm: 'Are you sure?' } %><td>
 
                  </tr>
                  <%else%>
                  <tr>
                   <td><%= link_to user_path(@book.user_id) do %><%= attachment_image_tag @book.user, :profile_image, size: "100x100", fallback: "no_image.jpg"%>
                    <div class="user-name">
								   	<%= @book.user.name %>
								    </div>
                    <% end %></td>
                   <td><%= @book.title %></td>
                   <td><%= @book.body %></td>
 
                  </tr>
                  <%end%>
              </tbody>
            </table>
        </div>


    </div>
</div>
