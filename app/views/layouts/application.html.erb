<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1 class="headline">
        <a href="#">Bookers2</a>
      </h1>
      <div id="slidemenu">
            <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
              <% if user_signed_in? %>
              <button type="button" class="btn btn-primary"><i class="glyphicon glyphicon-home"></i> <%= link_to "Home", root_path %></button>
                <li class="">
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                  <%= link_to "Home",  user_path(current_user.id) %>
                </li>
                <li class="">
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                  <%= link_to "Users", users_path %>
                </li>
                <li class="">
                <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
                  <%= link_to "Books", books_path%>
                </li>
              
                <li class="">
                 <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
                </li>
              <% else %>
                <button type="button" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i> <%= link_to "Home", root_path %></button>
                <li class="">
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                  <%= link_to "Home", root_path %>
                </li>
                <li class="">
                <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
                  <%= link_to "About", root_path %>
                </li>
                <li class="">
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                  <%= link_to "sign up", new_user_registration_path %>
                </li>
                <li class="">
                  <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
                  <%= link_to "log in", new_user_session_path %>
                </li>
              <% end %>
            </ul>
          </div>

    </header>
    <%= yield %>


    <footer>
    <p >CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
