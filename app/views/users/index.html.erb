<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>
 <div class="container"> <!-- ここを追加 -->
    <div class="row">   <!-- ここを追加 -->
        <div class="col-xs-3" > 
                  <%= render 'books/list', books: @book,user: current_user %>
            
        </div>
        
        <div class="col-xs-9">
            <h1>Users</h1>
            <table class="table">
              <thead>
                <tr>
                  <th></th>
                  <th>name</th>
                 
                 
                  <th colspan="3"></th>
                </tr>
              </thead>
            
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.jpg"%></td>
                    <td><%= user.name %></td>
                    <td><%= link_to 'Show', user_path(user.id) %></td>
                   
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>


    </div>
</div>