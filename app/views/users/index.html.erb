<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<%= form_for(@book,url:books_path) do |f| %>
 
    <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>
 
    <%= f.text_field :title %>
    <%= f.text_area :body %>
    <%= f.submit %>
<% end %>


<h1>All Users</h1>
   <% @users.each do |user| %>
      <p>name</p>
      <span><%= user.name %></span>
      <p>email</p>
      <span><%= user.email %></span>
     

   <% end %>